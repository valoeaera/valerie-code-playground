{
  "name": "valerie-code-playground",
  "version": "0.1.1",
  "description": "A repository for me to make things ",
  "keywords": [
    "JS",
    "REACT",
    "Docusaurus",
    "Vite",
    "Storybook"
  ],
  "homepage": "https://github.com/valoeaera/valerie-code-playground#readme",
  "bugs": {
    "url": "https://github.com/valoeaera/valerie-code-playground/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valoeaera/valerie-code-playground.git"
  },
  "license": "ISC",
  "author": "Valerie Roudebush",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npx lerna run build",
    "build-storybook": "build-storybook",
    "lint:css": "stylelint '**/*.css' --aei",
    "lint:css:fix": "stylelint '**/*.css' --aei --fix",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "eslint . --ext .md,.mdx",
    "lint:md:fix": "npm run lint:md -- --fix",
    "prepare": "husky install",
    "sort": "sort-package-json 'package.json' 'packages/*/package.json'",
    "start": "npx lerna run start",
    "storybook": "start-storybook -p 6006",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tidy": "bash .husky/pre-commit"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",
    "jsxSingleQuote": false,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {},
    "overrides": [],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/storybook-static/**"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "ignoreFiles": [
      "build/**",
      "node_modules/**"
    ],
    "rules": {
      "selector-class-pattern": null
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@types/node": "^18.13.0",
    "babel-loader": "^8.3.0",
    "eslint": "^8.26.0",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.0",
    "lerna": "^6.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "sort-package-json": "^2.1.0",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^29.0.0"
  }
}
