{
  "name": "valerie-code-playground",
  "version": "0.1.1",
  "description": "A repository for me to make things ",
  "keywords": [
    "JS",
    "REACT",
    "Docusaurus",
    "Vite",
    "Storybook"
  ],
  "homepage": "https://github.com/valoeaera/valerie-code-playground#readme",
  "bugs": {
    "url": "https://github.com/valoeaera/valerie-code-playground/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valoeaera/valerie-code-playground.git"
  },
  "license": "ISC",
  "author": "Valerie Roudebush",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc && vite build",
    "lint:css": "stylelint '**/*.css' --aei",
    "lint:css:fix": "stylelint '**/*.css' --aei --fix",
    "prepare": "husky install",
    "sort": "sort-package-json 'package.json'",
    "start": "vite",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tidy": "bash .husky/pre-commit"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",
    "jsxSingleQuote": false,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {},
    "overrides": [],
    "ignorePatterns": [
      "*.svg"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "ignoreFiles": [
      "node_modules/**",
      "courses/**"
    ],
    "rules": {
      "custom-property-pattern": "^[#.:]*(--|[a-z])*[a-z]+(-[a-z]+)*",
      "selector-class-pattern": "^[#.:]*(--|[a-z])*[a-z]+(-[a-z]+)*"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@remix-run/router": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "babel-loader": "^8.3.0",
    "eslint": "^8.26.0",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.0",
    "lerna": "^6.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "sort-package-json": "^2.1.0",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.2.0"
  }
}
